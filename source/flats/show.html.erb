<div class="banner small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
</div>

<% flat = data.cards[owner] %>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="user-card">
          <div class="user-descr">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar-xs" %>
            <p><%= owner %></p>
          </div>
          <div class="infos">
            <h6><%= flat.description %></h6>
            <p><%= flat.city_name %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="formulaire">
          <h2>Book this flat</h2>
          <form action="#">
            <div class="form-inline">
              <input type="text" class="form-control" placeholder="start date">
              <input type="text" class="form-control" placeholder="end date">
            </div>
            <select name="persons" id="" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" class="form-control btn btn-danger" value="Book it">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



